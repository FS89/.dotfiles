function csview() {
    local file="$1"
    column -s, -t < "$file" | less -#2 -N -S
}

function ccat() {
    FILE=$1
    if [[ $FILE == */* ]]
    then
	pygmentize $FILE 2> /dev/null;
    else	
        find . -name $FILE -exec pygmentize {} \; 2> /dev/null
    fi

    if [[ $? -ne 0 ]]
    then
        if [[ $FILE == */* ]]
	then
	    cat $FILE;
	else
	    find . -name $FILE -exec cat {} \;
        fi
    fi
}

function ppjson() {
    python -m json.tool | pygmentize -l javascript
}
